<Window x:Class="kyrsovarobota.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kyrsovarobota"
        mc:Ignorable="d"
        Title="Login" Height="650" Width="650">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F10A" Offset="0.06"/>
                    <GradientStop Color="Black" Offset="0.983"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.053"/>
                    <GradientStop Color="#FFF0F10A" Offset="0.593"/>
                </LinearGradientBrush>
            </Canvas.OpacityMask>
            <Label Content="ВХІД ДО АККАУНТУ" FontFamily="Times New Roman" FontSize="35" Foreground="White" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black"  Height="128" Width="448" Canvas.Left="101" VerticalAlignment="Center"/>
            <TextBox HorizontalAlignment="Left" x:Name="Username_login" FontSize="18" TextWrapping="Wrap" Foreground="Black" Background="WhiteSmoke" Text="" VerticalAlignment="Center" Width="378" Height="38" Canvas.Left="136" Canvas.Top="242"/>
            <Label Content="ЛОГІН" FontFamily="Times New Roman" FontSize="18" Foreground="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Center" Width="163" Canvas.Left="136" Canvas.Top="207"/>
            <Label Content="ПАРОЛЬ" FontFamily="Times New Roman" FontSize="18" Foreground="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Center" Width="163" Canvas.Left="136" Canvas.Top="302"/>
            <Button Content="ВХІД" FontFamily="Times New Roman" x:Name="login" Foreground="Black" Background="Yellow" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Height="48" Width="378" Click="Login_Click" Canvas.Left="136" Canvas.Top="437"/>
            <Button Content="РЕЄСТРАЦІЯ" FontSize="20" FontFamily="Times New Roman" x:Name="register" Background="Yellow" HorizontalAlignment="Center" VerticalAlignment="Top" Width="164" Height="38" Click="Button_Click" Canvas.Left="243" Canvas.Top="545"/>
            <PasswordBox x:Name="Password_login" 
             FontSize="18" Foreground="Black" Background="WhiteSmoke" 
             Width="378" Height="38" 
             Canvas.Left="136" Canvas.Top="337" VerticalContentAlignment="Center" Padding="5,0,35,0"/>

            <TextBox x:Name="Password_visible" 
         Visibility="Collapsed"
         FontSize="18" Foreground="Black" Background="WhiteSmoke" 
         Width="378" Height="38" 
         Canvas.Left="136" Canvas.Top="337" VerticalContentAlignment="Center" Padding="5,0,35,0"/>

            <Button x:Name="BtnShowPass" 
        Content="👁" 
        Width="30" Height="30" 
        Canvas.Left="480" Canvas.Top="341" 
        Background="Transparent" BorderBrush="{x:Null}"
        PreviewMouseDown="BtnShowPass_PreviewMouseDown" 
        PreviewMouseUp="BtnShowPass_PreviewMouseUp"
        MouseLeave="BtnShowPass_MouseLeave"/>
        </Canvas>

    </Grid>
</Window>
