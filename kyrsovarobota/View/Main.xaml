<Window x:Class="kyrsovarobota.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taxi Management System" Height="650" Width="850" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F10A" Offset="0.06"/>
                    <GradientStop Color="Black" Offset="0.983"/>
                </LinearGradientBrush>
            </Canvas.Background>

            <Label Content="Облік замовлень таксі" FontFamily="Times New Roman" FontSize="35" Foreground="White" 
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" 
                   Height="70" Width="600" Canvas.Left="125" Canvas.Top="10"/>

            <Border Background="WhiteSmoke" CornerRadius="10" Canvas.Left="10" Canvas.Top="100" Width="260" Height="480" Opacity="0.9">
                <StackPanel Margin="10">
                    <TextBlock Text="Нове замовлення" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" FontFamily="Times New Roman"/>

                    <Label Content="Ім'я клієнта" FontFamily="Times New Roman" FontSize="16"/>
                    <TextBox x:Name="ClientNameInput" FontSize="18" Height="30"/>

                    <Label Content="Звідки" FontFamily="Times New Roman" FontSize="16"/>
                    <ComboBox x:Name="FromComboBox" FontSize="18" Height="30" SelectionChanged="Route_Changed"/>

                    <Label Content="Куди" FontFamily="Times New Roman" FontSize="16"/>
                    <ComboBox x:Name="ToComboBox" FontSize="18" Height="30" SelectionChanged="Route_Changed"/>

                    <Label Content="Відстань (км)" FontFamily="Times New Roman" FontSize="16"/>
                    <TextBox x:Name="DistanceInput" FontSize="18" Height="30" />

                    <Label Content="Ціна (грн)" FontFamily="Times New Roman" FontSize="16"/>
                    <TextBox x:Name="PriceInput" FontSize="18" Height="30" IsReadOnly="True" Background="#EEE"/>

                    <Button Content="ДОДАТИ" Click="AddOrder_Click" Margin="0,20,0,0" Height="40" 
                            Background="Yellow" Foreground="Black" FontFamily="Times New Roman" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <DataGrid x:Name="OrdersGrid" Canvas.Left="285" Canvas.Top="100" Width="540" Height="400" 
                      AutoGenerateColumns="False" IsReadOnly="True" Background="WhiteSmoke" Opacity="0.95" RowHeight="30">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="35"/>
                    <DataGridTextColumn Header="Клієнт" Binding="{Binding ClientName}" Width="100"/>
                    <DataGridTextColumn Header="Маршрут" Binding="{Binding FromAddress}" Width="*"/>
                    <DataGridTextColumn Header="Куди" Binding="{Binding ToAddress}" Width="*"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding TotalPrice}" Width="70"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="ВИДАЛИТИ" Click="DeleteOrder_Click" Canvas.Left="285" Canvas.Top="515" Width="150" Height="35" 
                    Background="#FF3E3E" Foreground="White" FontFamily="Times New Roman" FontSize="16"/>

            <Button Content="ВИХІД" Click="Logout_Click" Canvas.Left="675" Canvas.Top="515" Width="150" Height="35" 
                    Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="16"/>
        </Canvas>
    </Grid>
</Window>
