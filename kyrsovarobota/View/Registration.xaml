<Window x:Class="kyrsovarobota.View.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kyrsovarobota"
        mc:Ignorable="d"
        Title="Registration" Height="650" Width="650">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F10A" Offset="0.06"/>
                    <GradientStop Color="Black" Offset="0.983"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.053"/>
                    <GradientStop Color="#FFF0F10A" Offset="0.593"/>
                </LinearGradientBrush>
            </Canvas.OpacityMask>
            <Label Content="Реєстрація" FontFamily="Times New Roman" FontSize="35" Foreground="White"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Black"  Height="80" VerticalAlignment="Top" Width="432" Canvas.Left="101"/>
            <TextBox HorizontalAlignment="Left" x:Name="UsernameTextBox" FontSize="20" TextWrapping="Wrap" Foreground="Black" Background="WhiteSmoke" Text="" VerticalAlignment="Top" Width="290" Height="38" Canvas.Left="172" Canvas.Top="158"/>
            <TextBox HorizontalAlignment="Left" x:Name="PasswordTextBox" FontSize="20" TextWrapping="Wrap" Foreground="Black" Background="WhiteSmoke" Text="" VerticalAlignment="Top" Width="378" Height="38" Canvas.Left="136" Canvas.Top="262"/>
            <TextBox HorizontalAlignment="Left" x:Name="confirmPasswordTextBox" FontSize="20" TextWrapping="Wrap" Foreground="Black" Background="WhiteSmoke" Text="" VerticalAlignment="Center" Width="378" Height="38" Canvas.Left="136" Canvas.Top="353"/>
            <Label Content="Логін(не менше 5 символів)" FontFamily="Times New Roman" FontSize="20" Foreground="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Center" Width="253" Canvas.Top="123" Canvas.Left="172"/>
            <Label Content="Пароль(не менше 6 символів)" FontFamily="Times New Roman" FontSize="20" Foreground="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="40" VerticalAlignment="Center" Width="271" Canvas.Left="136" Canvas.Top="222"/>
            <Label Content="Підтвердити пароль" FontFamily="Times New Roman" FontSize="20" Foreground="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="36" VerticalAlignment="Center" Width="189" Canvas.Left="136" Canvas.Top="317"/>
            <Button Content="ЗАРЕЄСТРУВАТИСЬ" FontFamily="Times New Roman" Click="Register" x:Name="Username_register" Foreground="Black" Background="Yellow" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Height="48" Width="378" Canvas.Left="136" Canvas.Top="484"/>
            <Button Content="Назад" FontFamily="Times New Roman" x:Name="back" FontSize="20" Foreground="White" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Width="164" Height="36" Click="Button_Click" Canvas.Left="243" Canvas.Top="562"/>

        </Canvas>

    </Grid>
</Window>
